<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:gravity="center"
    >

    <TextView
        android:id="@+id/textView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="Choose a Control Scheme to Start."
        android:textAppearance="?android:attr/textAppearanceLarge" />
    
    <Button 
    	android:text="Launch Tilt Control" 
    	android:id="@+id/bTilt" 
    	android:layout_width="fill_parent" 
    	android:layout_height="wrap_content"
    	android:layout_marginTop="20dp"
    ></Button>
    
    <Button 
    	android:text="Launch Virtual Control" 
    	android:id="@+id/bVirtual" 
    	android:layout_width="fill_parent" 
    	android:layout_height="wrap_content"
    	android:layout_marginTop="20dp"
    ></Button>
    
    <Button 
    	android:text="Launch Segmented Control" 
    	android:id="@+id/bSegment" 
    	android:layout_width="fill_parent" 
    	android:layout_height="wrap_content"
    	android:layout_marginTop="20dp"
    ></Button>
	
	<Button 
    	android:text="Launch Relative Control" 
    	android:id="@+id/bRelative" 
    	android:layout_width="fill_parent" 
    	android:layout_height="wrap_content"
    	android:layout_marginTop="20dp"
    ></Button>
    
    <Button 
    	android:layout_height="wrap_content" 
    	android:id="@+id/bServer" 
    	android:text="Launch Server Test" 
    	android:layout_marginTop="20dp" 
    	android:layout_width="fill_parent"
    ></Button>
    
	<LinearLayout 
	    android:orientation="vertical"
	    android:layout_width="fill_parent"
	    android:layout_height="fill_parent"
	    android:gravity="bottom">
	    
	    <Button 
    		android:layout_height="wrap_content"
    		android:layout_width="wrap_content" 
    		android:id="@+id/bAbout" 
    		android:text="About Us" 
    	></Button>
	    
	</LinearLayout>
    
</LinearLayout>
